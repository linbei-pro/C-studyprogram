#include<iostream>
#include<string>
using namespace std;

class Time
{
public:
	Time(int h,int m,int s):hour(h),minute(m),sec(s){}  //构造函数

	friend void display(Time& t);                    //声明友元函数

private:
	int hour;
	int minute;
	int sec;
};

void display(Time &t)         //这是一个普通函数
{
	cout << t.hour << ":" << t.minute << ":" << t.sec;
}

int main()
{
	Time t1(10, 13, 56);
	display(t1);
	return 0;
}
