#include<iostream>
#include<string>
using namespace std;

class Student
{
public:
	Student(int n,string nam, char s)
	{
		num = n;
		name = nam;
		sex = s;
		cout << "Constructor called." << endl;
	}
	~Student()
	{
		cout << "Destructor called." << num << endl;
	}

	void display()
	{
		cout << "num: " << num << endl;
		cout << "name: " << name << endl;
		cout << "sex: " << sex << endl;
	}

private:
	int num;
	string name;
	char sex;
};

int main()
{
	Student stud1(10000, "zhang_san", "f");
	stud1.display();
	Student stud2(10001, "zhao_si", "w");
	stud2.display();
	Student stud3(10002, "wang_wu", "w");
	stud3.display();

	return 0;
}
