class Date;         //对Date类的提前引用声明
class Time
{
public:
	Time(int h,int m,int s):hour(h),minute(m),sec(s){}      //构造函数

	void display(Date &);

private:
	int hour;
	int minute;
	int sec;
};

class Date
{
public:
	Date(int m,int d,int y):month(m),day(d),year(y){}

	friend void Time::display(Date&);      //声明Time中的display函数为本类的友元函数

private:
	int month;
	int day;
	int year;
};

void Time::display(Date &d)
{
	cout << d.month << "/" << d.day << "/" << d.year << endl;  //引用Date类对象中的私有数据
	cout << hour << ":" << minute << ":" << sec << endl;       //引用本类对象中的私有数据
}

int main()
{
	Time t1(19, 10, 30);
	Date d1(5, 13, 2024);
	t1.display(d1);
	return 0;

}
