class Time
{
public:
	Time() { minute = 0; sec = 0; }        //默认构造函数
	Time(int m, int s) :minute(m), sec(s){} //构造含数重载
	Time operator++();                    //声明前置++重载函数
	Time operator++(int);                 //声明后置++重载函数
	void display();

private:
	int minute;
	int sec;
};

Time Time::operator++()
{
	if (++sec >= 60)
	{
		sec -= 60;
		++minute;
	}
	return *this;
}

Time Time::operator++(int)
{
	Time temp = *this;
	sec++;
	if (sec >= 60)
	{
		sec -= 60;
		++minute;
	}

	return temp;
}

void Time::display()
{
	cout << minute << ":" << sec << endl;
}

int main() {
	Time time1(34, 59), time2;
	cout << "time1 : ";
	time1.display();
	++time1;
	cout << "++time1 :";
	time1.display();
	time2 = time1++;
	cout << "time1 : ";
	time1.display();
	cout << "time2 : ";
	time2.display();


	return 0;
}
